



<%= form_for(@teacher, html: { class: 'form-horizontal' }) do |f| %>

    <% if @teacher.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

          <ul>
            <% @teacher.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <label class="col-lg-2 col-md-4 col-sm-4 col-xs-2 control-label">Nombre</label>
      <div class="col-lg-10 col-md-3 col-sm-3 col-xs-3">
        <%= f.text_field :nombre, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 col-md-4 col-sm-4 col-xs-6 control-label">Materia</label>
      <div class="col-lg-10 col-md-8 col-sm-8 col-xs-6">
        <%= f.text_field :materia, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 col-md-4 col-sm-4 col-xs-6 control-label">Semestre</label>
      <div class="col-lg-10 col-md-8 col-sm-8 col-xs-6">
        <%= f.text_field :semestre, autofocus: true, class: 'form-control' %>
      </div>
    </div>



    <div class="pull-right">
      <%= f.submit nil, class: 'btn btn-sm btn-primary' %>
    </div>
    <div class="clearfix"></div>
<% end %>
