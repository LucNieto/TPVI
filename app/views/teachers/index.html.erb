<div id="featured">
  <p id="notice"><%= notice %></p>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div class="m-b-md">
    <h3 class="m-b-none">Maestros</h3>
    <hr>
  </div>

  <div class="row">
    <div class="m-b-md">
      <section class="panel  panel-default">
        <!-- Encabezado -->
        <header class=" panel-heading">listado</header>

        <section class="panel-body">


          <div class="row wrapper">
            <%= link_to 'Nuevo Elemento', new_teacher_path, class: 'btn btn-s-md btn-primary' %>
            <br>
          </div>
          <% if @teachers.present? %>

              <!-- Tabla -->
              <table class="table table-stripped m-b-none ">
                <thead>
                <tr>
                  <th width="120px" class="text-center">Opciones</th>
                  <th class="col-lg-2 col-md-4 col-sm-4 col-xs-6 control-label">Nombre</th>
                  <th colspan="4">Materia</th>
                  <th colspan="4">Semestre</th>
                </tr>
                </thead>
                <tbody>
                <% @teachers.each do |item| %>
                    <tr>
                      <td class="text-center">
                        <!-- Boton mostrar -->
                        <%= link_to teacher_path(item) do %>
                            <i class="fa fa-eye"></i>
                        <% end %>
                        <!-- Boton editar -->
                        <%= link_to edit_teacher_path(item) do %>
                            <i class="fa fa-pencil text-success"></i>
                        <% end %>
                        <!-- Boton eliminar -->
                        <%= link_to teacher_path(item), method: :delete, data: { confirm: '¿Estas seguro de eliminar este elemento?' } do %>
                            <i class="fa fa-trash-o text-danger"></i>
                        <% end %>
                      </td>
                      <td colspan="4"><%= item.nombre %></td>
                      <td colspan="4"><%= item.materia %></td>
                      <td colspan="4"><%= item.semestre %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>

          <% else %>

              <!-- Alert informativo -->
              <div class="alert alert-info fade in alert-dismissable">
                <a href="teachers/index" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                <strong>Info!</strong> Aun no existen elementos en la base de datos para ser mostrados.
              </div>

          <% end %>
        </section>
      </section>
    </div>
  </div>

</div>